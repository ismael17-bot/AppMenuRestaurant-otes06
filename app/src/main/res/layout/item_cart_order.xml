<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:padding="8dp">

    <ImageView
        android:id="@+id/id_image_product"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fetuccine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/id_image_product"
        android:layout_toRightOf="@+id/id_image_product">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/id_image_cancel"
            android:layout_toLeftOf="@+id/id_image_cancel"
            android:gravity="center"
            android:orientation="vertical">

            <fontsproject.Raleway_Regular_TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fetuccine Alfredo"
                android:layout_marginLeft="10dp"
                android:textColor="@color/secondaryTextColor"
                android:textSize="18sp" />

            <fontsproject.Raleway_Regular_TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="Creme de leite fresco, queijo parmesÃ£o ralado e manteiga"
                android:textSize="16sp" />

            <fontsproject.Raleway_Regular_TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="R$29.00"
                android:textColor="@color/colorDarkRed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="142dp"
                android:layout_height="46dp"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_linear_gray">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_minus_2" />

                <fontsproject.Raleway_Regular_TextView
                    android:layout_width="0dp"
                    android:text="1"
                    android:textSize="22sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:src="@drawable/ic_add_2" />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/id_image_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingTop="8dp"
            android:src="@drawable/ic_cancel" />

    </RelativeLayout>


</RelativeLayout>