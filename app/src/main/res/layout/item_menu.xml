<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="15dp"    android:orientation="vertical">    <ImageView        android:id="@+id/id_image"        android:layout_width="match_parent"        android:layout_height="220dp"        android:contentDescription="@string/app_name"        android:scaleType="fitCenter"        tools:ignore="MissingConstraints" />    <fontsmaterialuiux.Raleway_Bold_TextView        android:id="@+id/id_title_tx"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="4dp"        android:textColor="@color/secondaryTextColor"        android:textSize="16sp" />    <fontsmaterialuiux.Raleway_Regular_TextView        android:id="@+id/id_body_tx"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="8dp"        android:textColor="@color/secondaryTextColor"        android:textSize="14sp" />    <fontsmaterialuiux.Raleway_Regular_TextView        android:id="@+id/id_price"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="4dp"        android:textColor="@color/secondaryTextColor"        android:textSize="14sp" /></LinearLayout>